<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2A85604"
    tools:context=".ui.PubberSearcher">


    <android.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="303dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="12dp"
        android:background="#E3965C"
        android:queryHint="Wyszukaj"
        app:layout_constraintBottom_toTopOf="@+id/Publista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent">

    </android.widget.SearchView>

    <ListView
        android:id="@+id/Publista"
        android:layout_width="wrap_content"
        android:layout_height="475dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="303dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toTopOf="@+id/searchView"
        app:layout_constraintEnd_toEndOf="@+id/searchView"
        app:layout_constraintStart_toStartOf="@+id/searchView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="303dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="@id/searchView"
        app:layout_constraintEnd_toEndOf="@+id/searchView"
        app:layout_constraintStart_toStartOf="@+id/searchView" />

    <androidx.cardview.widget.CardView
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:background="@color/black"
        app:cardBackgroundColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/searchView"
        app:layout_constraintStart_toStartOf="@+id/searchView"
        app:layout_constraintTop_toTopOf="@+id/searchView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:background="@color/black"
        app:cardBackgroundColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/searchView"
        app:layout_constraintEnd_toEndOf="@+id/searchView"
        app:layout_constraintTop_toTopOf="@+id/searchView" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:onClick="goToPubberFiltration"
        app:layout_constraintBottom_toTopOf="@+id/Publista"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_agenda" />

</androidx.constraintlayout.widget.ConstraintLayout>