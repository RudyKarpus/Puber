<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <com.google.android.material.card.MaterialCardView

        android:layout_width="380dp"
        android:layout_height="130dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#693D2B"
        app:cardBackgroundColor="#693D2B">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="380dp"
            android:layout_height="130dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/PubImage"
                android:layout_width="135dp"
                android:layout_height="114dp"
                android:clickable="false"
                android:contentDescription="Przykładowe zdjęcie pubu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_foreground" />


            <TextView
                android:id="@+id/nazwaPubu"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:textColor="#FFFFFF"
                android:textIsSelectable="true"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.24"
                app:layout_constraintStart_toEndOf="@+id/PubImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.16" />

            <TextView
                android:id="@+id/czasOtwarcia"
                android:layout_width="48dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/roundstyle"
                android:gravity="center"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/PubImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/drogaAuto"
                android:layout_width="48dp"
                android:layout_height="22dp"
                android:layout_marginStart="20dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/roundstyle"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/czasOtwarcia"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/drogaPieszo"
                android:layout_width="48dp"
                android:layout_height="22dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintStart_toEndOf="@+id/drogaAuto"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ocenaKoszty"
                android:layout_width="45dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="92dp"
                android:gravity="center"
                android:textColor="#FFFFFF"

                app:layout_constraintStart_toEndOf="@+id/PubImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ocenaJakosc"
                android:layout_width="45dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="92dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ocenaKoszty"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/ocenaGoogle"
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="92dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/ocenaJakosc"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/heart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/heartempty" />

            <ImageButton
                android:id="@+id/hearttest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/heartempty" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>